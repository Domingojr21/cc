<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration>
    <!-- Console appender for test output -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Disabled audit appender for tests -->
    <appender name="DISABLED_AUDIT" class="ch.qos.logback.core.helpers.NOPAppender"/>
    
    <!-- Main logger configuration -->
    <logger name="ms-orq-consultar-datos-generales-cliente-micm" level="INFO" additivity="false">
        <appender-ref ref="DISABLED_AUDIT"/>
    </logger>
    
    <!-- Root logger - only console output for tests -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>